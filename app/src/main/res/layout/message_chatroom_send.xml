<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mg_chatroom_context"
    android:orientation="horizontal">


    <com.daasuu.bl.BubbleLayout
        android:id="@+id/mg_chatroom_send_bubble"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:padding="8dp"
        app:bl_arrowDirection="right"
        app:bl_arrowHeight="8dp"
        app:bl_arrowWidth="8dp"
        app:bl_cornersRadius="20dp"
        app:bl_strokeWidth="1dp">

        <TextView
            android:id="@+id/mg_chatroom_send_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:maxWidth="210dp"
            android:text="@string/mg_frag_content"
            android:textSize="16sp" />


    </com.daasuu.bl.BubbleLayout>


    <TextView
        android:id="@+id/mg_chatroom_send_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/mg_chatroom_send_bubble"
        android:layout_marginStart="8dp"
        android:layout_toStartOf="@+id/mg_chatroom_send_bubble"
        android:text="10:50AM" />

</RelativeLayout>